#!/bin/sh

export GITAWAREPROMPT=~/.bash/git-aware-prompt
source $GITAWAREPROMPT/main.sh
export PS1="\[$txtgrn\]\u@\h\[$txtrst\] : \[$txtgrn\]\w \[$txtcyn\]\$git_branch\[$txtred\]\$git_dirty\[$txtrst\]\$ "
if [ $(id -u) -eq 0 ];
then
  export PS1="\[$txtred\]\u@\h\[$txtrst\] \w\$ "
fi

PATH=$PATH:$HOME/bin

export PATH
